<article class="post">
  <div class="title">
    <a href="/post/{{id}}">{{title}}</a>
    <p>{{post_text}}</p>
  </div>
  <div class="meta">
    Created by
    {{user.username}}
    on
    {{format_date created_at}}
    --
    {{comments.length}}
    {{format_plural "comment" comments.length}}
  </div>
</article>