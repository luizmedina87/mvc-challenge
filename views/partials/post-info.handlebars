<article class="post">
  <div class="title">
    <p>{{title}}</p>
    <p>{{post_text}}</p>
  </div>
  <div class="meta">
    Created by
    {{user.username}}
    on
    {{format_date created_at}}
    <a href="/post/{{id}}">
      {{comments.length}}
      {{format_plural "comment" comments.length}}
    </a>
  </div>
</article>